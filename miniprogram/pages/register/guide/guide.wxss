/* pages/register/guide/guide.wxss */
/* 注册引导页 - 街头运动风格 - 蓝色主题 */

/* ==================== 主容器 ==================== */
.container {
  min-height: 100vh;
  background: #F0F0F0;
  padding: 0 0 120rpx;
}

/* ==================== 顶部横幅 ==================== */
.header-banner {
  background: #000000;
  padding: 48rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.banner-slash {
  position: absolute;
  top: 0;
  right: -40rpx;
  width: 200rpx;
  height: 100%;
  background: #13E8DD;
  transform: skewX(-15deg);
}

.banner-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 1;
  display: block;
  text-transform: uppercase;
}

.banner-subtitle {
  font-size: 24rpx;
  color: #999999;
  position: relative;
  z-index: 1;
  display: block;
  margin-top: 8rpx;
}

/* ==================== 身份卡片列表 ==================== */
.identity-list {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.identity-card {
  background: #FFFFFF;
  border: 4rpx solid #000000;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.identity-card:active {
  transform: scale(0.98);
}

/* 左侧色条 */
.card-accent {
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
}

/* 图标 */
.card-icon {
  width: 88rpx;
  height: 88rpx;
  background: #F0F0F0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-left: 8rpx;
}

.icon-text {
  font-size: 48rpx;
}

/* 内容区 */
.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: 1rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 右侧箭头 */
.card-arrow {
  font-size: 40rpx;
  font-weight: 900;
  color: #000000;
  flex-shrink: 0;
}

/* ==================== 底部操作 ==================== */
.footer-actions {
  padding: 24rpx;
  margin-top: 24rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 900;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-ghost {
  background: transparent;
  color: #000000;
  border: 4rpx solid #000000;
}

.btn-ghost:active {
  opacity: 0.8;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 900;
}

/* ==================== 温馨提示 ==================== */
.tips-block {
  margin: 24rpx;
  padding: 24rpx;
  background: rgba(19, 232, 221, 0.1);
  border-left: 6rpx solid #13E8DD;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  flex: 1;
}
