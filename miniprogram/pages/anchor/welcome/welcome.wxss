/* 主播欢迎页面样式 */

.welcome-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 30%, #f5f5f5 30%);
  padding: 40rpx 20rpx 20rpx;
}

/* ========== 欢迎横幅 ========== */
.welcome-banner {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  margin-bottom: 30rpx;
}

.banner-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 15rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ========== 信息卡片 ========== */
.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2px solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* ========== 主播信息 ========== */
.info-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.info-row .label {
  color: #999;
  width: 150rpx;
}

.info-row .value {
  color: #333;
  flex: 1;
}

.info-row .value.highlight {
  color: #667eea;
  font-weight: bold;
  font-size: 30rpx;
}

/* ========== 经纪人信息 ========== */
.agent-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.agent-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.agent-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.agent-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.agent-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.agent-role {
  font-size: 24rpx;
  color: #999;
}

.contact-btn {
  padding: 15rpx 30rpx;
  background: #667eea;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: none;
}

.contact-btn::after {
  border: none;
}

.contact-btn:active {
  opacity: 0.8;
}

/* ========== 下一步指引 ========== */
.steps-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.step-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.step-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.step-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* ========== 操作按钮 ========== */
.action-section {
  padding: 20rpx 0 40rpx;
}

.enter-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

.enter-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
