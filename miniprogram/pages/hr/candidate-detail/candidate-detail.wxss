/* pages/hr/candidate-detail/candidate-detail.wxss */
/* HR候选人详情 - 街头运动风格 - 黄色主题 */

/* ==================== 主容器 ==================== */
.container {
  min-height: 100vh;
  background: #F0F0F0;
  padding-bottom: 160rpx;
}

/* ==================== 顶部横幅 ==================== */
.header-banner {
  background: #000000;
  padding: 48rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.banner-slash {
  position: absolute;
  top: 0;
  right: -40rpx;
  width: 200rpx;
  height: 100%;
  background: #F8D55D;
  transform: skewX(-15deg);
}

.banner-text {
  font-size: 40rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 1;
  text-transform: uppercase;
}

/* ==================== 通用卡片 ==================== */
.score-card,
.info-card,
.photos-card,
.review-form {
  background: #FFFFFF;
  margin: 24rpx;
  padding: 32rpx;
  border: 4rpx solid #000000;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.header-slash {
  width: 6rpx;
  height: 32rpx;
  background: #F8D55D;
}

.header-title {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: 3rpx;
  text-transform: uppercase;
}

/* ==================== 评分卡片 ==================== */
.score-card {
  background: #000000;
  border-color: #F8D55D;
}

.score-card .header-slash {
  background: #F8D55D;
}

.score-card .header-title {
  color: #F8D55D;
}

.score-main {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.score-circle {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border: 4rpx solid #F8D55D;
  background: rgba(248, 213, 93, 0.1);
}

.score-number {
  font-size: 64rpx;
  font-weight: 900;
  color: #F8D55D;
  font-family: 'Arial Black', sans-serif;
  line-height: 1;
}

.score-label {
  font-size: 22rpx;
  font-weight: 900;
  color: #F8D55D;
  margin-top: 8rpx;
  letter-spacing: 1rpx;
}

.score-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.score-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(248, 213, 93, 0.1);
  border-left: 4rpx solid #F8D55D;
}

.item-label {
  font-size: 26rpx;
  font-weight: 900;
  color: #F8D55D;
}

.item-value {
  font-size: 40rpx;
  font-weight: 900;
  color: #FFFFFF;
  font-family: 'Arial Black', sans-serif;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background: #F8D55D;
  color: #000000;
  font-size: 22rpx;
  font-weight: 900;
  border-radius: 0;
}

.recommendation {
  padding: 20rpx;
  background: rgba(248, 213, 93, 0.1);
  border-left: 4rpx solid #F8D55D;
}

.rec-label {
  font-size: 24rpx;
  font-weight: 900;
  color: #F8D55D;
  display: block;
  margin-bottom: 8rpx;
}

.rec-text {
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 1.6;
  font-weight: 600;
}

/* ==================== 信息卡片 ==================== */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  font-weight: 900;
  color: #999999;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.info-value {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
}

.works-section,
.goals-section {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #F5F5F5;
  border-left: 4rpx solid #F8D55D;
}

.works-label,
.goals-label {
  font-size: 24rpx;
  font-weight: 900;
  color: #666666;
  display: block;
  margin-bottom: 8rpx;
}

.works-text,
.goals-text {
  font-size: 26rpx;
  color: #000000;
  line-height: 1.6;
  font-weight: 600;
}

/* ==================== 照片展示 ==================== */
.photos-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.photo-item {
  width: 100%;
  height: 300rpx;
  border: 3rpx solid #000000;
  border-radius: 8rpx;
}

/* ==================== 审核表单 ==================== */
.review-form {
  border-color: #F8D55D;
  box-shadow: 0 0 0 4rpx #F8D55D;
}

.form-field {
  margin-bottom: 32rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-label {
  font-size: 26rpx;
  font-weight: 900;
  color: #000000;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.field-input,
.field-textarea,
.picker-display {
  width: 100%;
  padding: 20rpx;
  background: #F5F5F5;
  border: 2rpx solid #E0E0E0;
  font-size: 28rpx;
  color: #000000;
  border-radius: 0;
  box-sizing: border-box;
}

.field-input:focus,
.field-textarea:focus {
  border-color: #F8D55D;
  background: #FFFFFF;
}

.field-textarea {
  min-height: 160rpx;
}

/* Placeholder 样式 */
.field-input::placeholder,
.field-textarea::placeholder {
  color: #999999;
  opacity: 0.6;
  font-weight: 400;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-display::after {
  content: '▼';
  font-size: 20rpx;
  color: #666666;
}

/* ==================== 底部按钮 ==================== */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #FFFFFF;
  border-top: 4rpx solid #000000;
  z-index: 100;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: #F8D55D;
  color: #000000;
  border: none;
  font-size: 32rpx;
  font-weight: 900;
  border-radius: 0;
  letter-spacing: 2rpx;
}

.btn-submit:active {
  opacity: 0.9;
}

/* ==================== 面试安排区域 ==================== */
.interview-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #E0E0E0;
}

.section-divider {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: #E0E0E0;
}

.divider-text {
  font-size: 24rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.field-hint {
  font-size: 22rpx;
  color: #666666;
  margin-top: 8rpx;
  display: block;
  font-weight: 400;
}

/* ==================== 面试官选择 ==================== */
.interviewer-group {
  margin-bottom: 24rpx;
}

.interviewer-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.label-icon {
  font-size: 32rpx;
  line-height: 1;
}

.label-text {
  font-size: 26rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: 1rpx;
}

.interviewer-picker {
  padding: 20rpx;
  background: #F5F5F5;
  border: 2rpx solid #E0E0E0;
  font-size: 28rpx;
  color: #000000;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.interviewer-picker::after {
  content: '▼';
  font-size: 20rpx;
  color: #666666;
}

/* 已选择的面试官高亮 */
.interviewer-group.selected .interviewer-picker {
  border-color: #F8D55D;
  background: rgba(248, 213, 93, 0.1);
}

.interviewer-group.selected .label-text {
  color: #F8D55D;
}

/* ==================== 空状态 ==================== */
.empty-state {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F0F0;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 900;
  color: #999999;
}
