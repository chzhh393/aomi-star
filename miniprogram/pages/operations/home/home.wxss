/* pages/operations/home/home.wxss */
/* 运营工作台 - 街头运动风格 - 紫色主题 */

/* ==================== 主容器 ==================== */
.container {
  min-height: 100vh;
  background: #F0F0F0;
  padding: 0 0 120rpx;
}

/* ==================== 顶部横幅 ==================== */
.header-banner {
  background: #000000;
  padding: 48rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.banner-slash {
  position: absolute;
  top: 0;
  right: -40rpx;
  width: 200rpx;
  height: 100%;
  background: #9C27B0;
  transform: skewX(-15deg);
}

.banner-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 1;
  display: block;
  text-transform: uppercase;
}

.banner-subtitle {
  font-size: 24rpx;
  color: #999999;
  position: relative;
  z-index: 1;
  display: block;
  margin-top: 8rpx;
}

/* ==================== 欢迎卡片 ==================== */
.welcome-card {
  background: #FFFFFF;
  margin: 24rpx;
  padding: 32rpx;
  border: 4rpx solid #000000;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.welcome-icon {
  font-size: 64rpx;
  flex-shrink: 0;
}

.welcome-content {
  flex: 1;
}

.welcome-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 8rpx;
}

.welcome-desc {
  font-size: 24rpx;
  color: #666666;
  font-weight: 600;
}

/* ==================== 统计块 ==================== */
.stats-block {
  background: #000000;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
}

.block-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.label-slash {
  width: 6rpx;
  height: 32rpx;
  background: #9C27B0;
}

.label-text {
  font-size: 24rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 3rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  background: #1A1A1A;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 3rpx solid #333333;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 900;
  color: #9C27B0;
  margin-bottom: 12rpx;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 600;
}

/* ==================== 快捷功能 ==================== */
.actions-block {
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border: 4rpx solid #000000;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-card {
  background: #F8F8F8;
  border: 3rpx solid #E0E0E0;
  padding: 32rpx 24rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.action-card:active {
  transform: scale(0.95);
}

.card-accent {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 6rpx;
}

.card-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 900;
  color: #000000;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
}

/* ==================== 温馨提示 ==================== */
.tips-block {
  margin: 24rpx;
  padding: 24rpx;
  background: rgba(156, 39, 176, 0.1);
  border-left: 6rpx solid #9C27B0;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  flex: 1;
}
