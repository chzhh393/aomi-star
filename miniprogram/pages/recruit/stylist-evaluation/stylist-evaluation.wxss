.stylist-evaluation-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.candidate-info {
  background: linear-gradient(135deg, #8E44AD, #3498DB);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.info-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.info-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.evaluation-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.form-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.score-item {
  margin-bottom: 30rpx;
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.dimension-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.dimension-score {
  font-size: 28rpx;
  color: #8E44AD;
  font-weight: bold;
}

.slider {
  width: 100%;
}

.total-score {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 25rpx;
  background: linear-gradient(135deg, rgba(142, 68, 173, 0.1), rgba(52, 152, 219, 0.1));
  border-radius: 15rpx;
  margin: 30rpx 0;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #8E44AD;
  margin-left: 15rpx;
}

.notes-section {
  margin-top: 20rpx;
}

.notes-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.notes-label::after {
  content: ' *';
  color: #FF3B30;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: 2rpx solid #E0E0E0;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #8E44AD, #3498DB);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  box-shadow: 0 8rpx 20rpx rgba(142, 68, 173, 0.3);
}

.submit-btn:active {
  opacity: 0.8;
}
