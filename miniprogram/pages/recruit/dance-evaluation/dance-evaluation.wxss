.dance-evaluation-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.candidate-info {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.info-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.info-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.evaluation-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.form-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.score-item {
  margin-bottom: 30rpx;
}

.dimension-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.slider {
  width: 100%;
}

.total-score {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
  margin: 30rpx 0;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #f5576c;
  margin-left: 15rpx;
}

.notes-section {
  margin-top: 20rpx;
}

.notes-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.submit-btn {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
}
