/* HR面试官分配页面样式 */

.assign-interviewers-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* ========== 提示横幅 ========== */
.tip-banner {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.tip-icon {
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  flex-shrink: 0;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.tip-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

.tip-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ========== 候选人信息卡片 ========== */
.candidate-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2px solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.candidate-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.info-row .label {
  color: #999;
  width: 150rpx;
}

.info-row .value {
  color: #333;
  flex: 1;
}

.info-row .value.status {
  color: #ff9500;
  font-weight: bold;
}

/* ========== 面试日程设置 ========== */
.schedule-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2px solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.form-item {
  margin-bottom: 25rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.picker {
  padding: 25rpx 30rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  padding: 25rpx 30rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* ========== 面试官选择 ========== */
.interviewers-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.interviewer-group {
  margin-bottom: 30rpx;
}

.interviewer-group:last-child {
  margin-bottom: 0;
}

.group-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.label-icon {
  font-size: 32rpx;
}

.label-text {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.interviewer-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.interviewer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  border: 2px solid transparent;
  transition: all 0.2s;
}

.interviewer-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.interviewer-name {
  font-size: 28rpx;
  color: #333;
}

.interviewer-item.selected .interviewer-name {
  color: #2196f3;
  font-weight: bold;
}

.check-icon {
  font-size: 32rpx;
  color: #2196f3;
  font-weight: bold;
}

/* ========== 提交按钮 ========== */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
}
