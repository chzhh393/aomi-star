/* HR审核页面样式 */

.hr-review {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 20rpx 200rpx;
}

/* ========== 加载状态 ========== */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #fff;
  font-size: 28rpx;
}

/* ========== 内容区域 ========== */
.content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* ========== 区域标题 ========== */
.section-title {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.optional {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 10rpx;
}

.required {
  color: #FF6B6B;
  font-size: 28rpx;
  margin-left: 5rpx;
}

/* ========== 信息卡片 ========== */
.info-section {
  margin-bottom: 10rpx;
}

.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* ========== 照片展示 ========== */
.photos-section {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
}

/* ========== 信息组 ========== */
.info-group {
  margin-bottom: 30rpx;
}

.info-group:last-child {
  margin-bottom: 0;
}

.group-header {
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2px solid #667eea;
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row.full {
  flex-direction: column;
  align-items: flex-start;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  min-width: 150rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value.minor {
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
}

/* ========== 备注区域 ========== */
.notes-section {
  margin-bottom: 10rpx;
}

.notes-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.notes-input {
  width: 100%;
  min-height: 150rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.notes-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* ========== 拒绝原因 ========== */
.reject-section {
  margin-bottom: 10rpx;
}

.reject-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.reject-reasons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reject-reason-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  transition: background 0.2s;
}

.reject-reason-item:active {
  background: #f0f0f0;
}

.reason-text {
  font-size: 28rpx;
  color: #333;
}

.custom-reason {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.reason-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.reason-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* ========== 操作按钮 ========== */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  height: 90rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn::after {
  border: none;
}

.reject-btn {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  color: #fff;
}

.approve-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}
