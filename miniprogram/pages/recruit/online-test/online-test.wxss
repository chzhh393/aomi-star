/* 在线测试页面样式 */

.online-test-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 15rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.test-intro {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
}

.mock-notice {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  margin-bottom: 40rpx;
}

.notice-icon {
  font-size: 32rpx;
}

.notice-text {
  flex: 1;
  font-size: 24rpx;
  color: #fff;
}

.action-section {
  margin-bottom: 40rpx;
}

.start-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  color: #667eea;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
}

/* 测试结果 */
.result-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.result-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2px solid #f0f0f0;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.score-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.score-value {
  display: block;
  font-size: 80rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.score-label {
  font-size: 24rpx;
  color: #999;
}

.personality-type {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.type-label {
  font-size: 24rpx;
  color: #999;
}

.type-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

.traits-list {
  margin-bottom: 30rpx;
}

.traits-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.trait-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 15rpx;
}

.trait-name {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}

.trait-bar-bg {
  flex: 1;
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.trait-bar {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transition: width 0.3s;
}

.trait-score {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
}
