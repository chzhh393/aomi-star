<!--
  HR评级审核页面
-->
<view class="rating-review-page">
  <view class="candidate-card">
    <text class="card-title">候选人信息</text>
    <view class="info-row">
      <text class="label">姓名：</text>
      <text class="value">{{candidate.basicInfo.name}}</text>
    </view>
  </view>

  <view class="evaluation-summary">
    <text class="summary-title">评价汇总</text>

    <view class="eval-item">
      <text class="eval-label">舞蹈导师评分：</text>
      <text class="eval-score">{{candidate.evaluations.danceTeacher.score}}/10</text>
    </view>

    <view class="eval-item">
      <text class="eval-label">经纪人评分：</text>
      <text class="eval-score">{{candidate.evaluations.agent.score}}/10</text>
    </view>
  </view>

  <view class="rating-result" wx:if="{{rating}}">
    <text class="result-title">系统评级</text>

    <view class="grade-display">
      <text class="grade-label">{{rating.label}}</text>
      <text class="grade-score">{{rating.score}}分</text>
    </view>

    <view class="rating-details">
      <view class="detail-row">
        <text class="detail-label">建议薪资：</text>
        <text class="detail-value">{{rating.suggestedSalary}}</text>
      </view>
      <view class="detail-row">
        <text class="detail-label">培训周期：</text>
        <text class="detail-value">{{rating.trainingDuration}}周</text>
      </view>
    </view>

    <view class="action-section">
      <button class="approve-btn" bindtap="onApprove">确认评级</button>
      <button class="reject-btn" bindtap="onReject">不通过</button>
    </view>
  </view>

  <button wx:else class="generate-btn" bindtap="onGenerateRating">生成评级</button>
</view>
