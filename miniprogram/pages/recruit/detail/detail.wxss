/* pages/recruit/detail/detail.wxss */
/* 报名详情页 - 街头运动风格 */

.container {
  min-height: 100vh;
  background: #F0F0F0;
  padding: 0 0 120rpx;
}

/* ==================== 顶部横幅 ==================== */
.header-banner {
  background: #000000;
  padding: 48rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}

.banner-slash {
  position: absolute;
  top: 0;
  right: -40rpx;
  width: 200rpx;
  height: 100%;
  background: #13E8DD;
  transform: skewX(-15deg);
}

.banner-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 1;
  display: block;
  text-transform: uppercase;
}

.banner-subtitle {
  font-size: 24rpx;
  color: #999999;
  position: relative;
  z-index: 1;
  display: block;
  margin-top: 8rpx;
}

/* ==================== 信息卡片 ==================== */
.info-card {
  background: #FFFFFF;
  margin: 24rpx;
  padding: 32rpx;
  border: 4rpx solid #000000;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.header-slash {
  width: 6rpx;
  height: 32rpx;
  background: #13E8DD;
}

.header-title {
  font-size: 28rpx;
  font-weight: 900;
  color: #000000;
  letter-spacing: 2rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #000000;
  max-width: 60%;
  text-align: right;
}

/* ==================== 标签 ==================== */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #13E8DD;
  color: #000000;
  font-size: 24rpx;
  font-weight: 900;
}

/* ==================== 照片网格 ==================== */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: calc(50% - 8rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.photo-img {
  width: 100%;
  height: 280rpx;
  border: 3rpx solid #E0E0E0;
}

.photo-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 600;
}

/* ==================== 视频网格 ==================== */
.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.video-item {
  width: calc(33.33% - 12rpx);
  height: 160rpx;
  background: #000000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: 3rpx solid #333333;
}

.video-play-icon {
  font-size: 48rpx;
  color: #13E8DD;
}

.video-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 600;
}

/* ==================== 底部 ==================== */
.footer {
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
}

.btn-back,
.btn-edit {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 900;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-back {
  background: #FFFFFF;
  color: #000000;
  border: 4rpx solid #000000;
}

.btn-edit {
  background: #13E8DD;
  color: #000000;
  border: none;
}

.btn-back:active,
.btn-edit:active {
  opacity: 0.8;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 900;
}

/* ==================== 空状态 ==================== */
.empty-state {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F0F0;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 900;
  color: #999999;
}
