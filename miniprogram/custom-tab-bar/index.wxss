/* 自定义TabBar - 街头运动风格 */

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 2rpx solid #E0E0E0;
  z-index: 1000;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  position: relative;
}

.tab-bar-icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-bar-icon {
  width: 100%;
  height: 100%;
}

.tab-bar-indicator {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  border-radius: 2rpx;
}

.tab-bar-text {
  font-size: 20rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}
