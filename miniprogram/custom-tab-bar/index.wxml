<!--custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <view
    class="tab-bar-item"
    wx:for="{{list}}"
    wx:key="index"
    data-index="{{index}}"
    data-path="{{item.pagePath}}"
    bindtap="switchTab"
  >
    <view class="tab-bar-icon-wrapper">
      <image
        class="tab-bar-icon"
        src="{{selected === index ? item.selectedIconPath : item.iconPath}}"
      />
      <view
        class="tab-bar-indicator"
        wx:if="{{selected === index}}"
        style="background: {{selectedColor}}"
      ></view>
    </view>
    <text
      class="tab-bar-text"
      style="color: {{selected === index ? selectedColor : color}}"
    >
      {{item.text}}
    </text>
  </view>
</view>
